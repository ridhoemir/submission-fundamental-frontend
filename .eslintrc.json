{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-underscore-dangle": "off",
        "func-names": "off",
        "prefer-promise-reject-errors": "off",
        "import/no-extraneous-dependencies": [
            "error", 
            {
                "devDependencies": true, 
                "optionalDependencies": false, 
                "peerDependencies": false
            }
        ],
        "no-use-before-define": "off"
        }
}
